<div class="row">
<!--    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3"></div>-->
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2>Checkout</h2>
        <h4>Your Total: ${{totalPrice}}</h4>
        
        {{#if error_message}}
        <div class="alert alert-danger">
        {{error_message}}
        </div>
        {{/if}}
        
        <div id="charge-error" class="alert alert-danger invisible"></div>
        
        <form action="/checkout" method="post" id="checkout-form">  
            <div class="form-group">
                <input placeholder="Name" type="text" id="name" class="form-control" required name="name">
            </div>
            <div class="form-group">
                <input placeholder="Address" type="text" id="address" class="form-control" required name="address">
            </div>
            <div class="form-group">
                <input placeholder="Card Holder Name" type="text" id="card-name" class="form-control" required name="card-name">
            </div>
            <div class="form-group">
                <input placeholder="Credit Card Number" type="text" id="card-number" class="form-control" required name="card-number">
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input placeholder="Expiration Month" type="text" id="card-expiry-month" class="form-control" required name="card-expiry-month">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input placeholder="Expiration Year" type="text" id="card-expiry-year" class="form-control" required name="card-expiry-year">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input placeholder="CVC" type="text" id="card-cvc" class="form-control" required name="card-cvc">
            </div>
            <button type="submit" class="btn btn-succe00ss">Buy now</button>
        </form>
    </div>
    <div class="col-md-4"></div>
<!--    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3"></div>-->
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascript/checkout.js"></script>